<main>  
  <div class="container">
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-md-6">
          <h3><%= link_to(project.name, project_path(project)) %></h3>
          <a href="<%= project_path(project) %>"> 
            <img src="<%= project.img  %>" class="img-responsive thumbnail">
          </a>
        </div>
      <% end %>
    </div>
  </div>
</main>





  