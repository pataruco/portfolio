<main>  
  <div id="show "class="container-fluid project-show">
    <h1 class="project-show-title"> <%= @project.name %> </h1>
    <div class="row">
      <div class="col-md-6">
        <img src=" <%= @project.img %> " alt="<%= @project.name  %>" class="img-responsive thumbnail">
      </div>
      <div class="col-md-6">
        <h3 class="project-show-subtitle">Description:</h3>
        <p><%= @project.description %>  </p>
        <h3 class="project-show-subtitle">Technologies:</h3>
        <p><%= @project.technologies %>  </p>
        <a href="<%= @project.web %>" class="btn btn-info " role="button" target="_blank">
          <i class="fa fa-4x fa-globe"></i>
        </a>
        <a href=" <%= @project.git %>" class="btn btn-info" role="button" target="_blank">
          <i class="fa fa-4x fa-github-square"></i>
        </a>
      </div>
    </div>
  </div>
</main>
 