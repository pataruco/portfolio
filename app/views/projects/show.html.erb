<main>  
  <div class="container-fluid">
    <h1> <%= @project.name %> </h1>
    <div class="row">
      <div class="col-md-6">
        <img src=" <%= @project.img %> " alt="<%= @project.name  %>" class="img-responsive thumbnail">
      </div>
      <div class="col-md-6">
        <h3>Description:</h3>
        <p><%= @project.description %>  </p>
        <h3>Technologies:</h3>
        <p><%= @project.technologies %>  </p>
        <a href="<%= @project.web %>" class="btn btn-info " role="button" target="_blank">
          <i class="fa fa-lg fa-globe"></i>
        </a>
        <a href=" <%= @project.git %>" class="btn btn-info" role="button" target="_blank">
          <i class="fa fa-lg fa-github"></i>
        </a>
      </div>
    </div>
  </div>
</main>
 